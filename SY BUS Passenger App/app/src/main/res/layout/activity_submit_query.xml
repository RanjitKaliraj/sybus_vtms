<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sybus.android.userapp.ui.submit_query">

    <include
        android:id="@+id/app_bar"
        layout="@layout/view_app_bar" />


    <View
        android:id="@+id/query_activity_tabbar_bottom_line"
        android:layout_below="@id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@drawable/tab_bar_shadow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/query_activity_tabbar_bottom_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangular_layout_shadow_effect_light">


            <EditText
                android:id="@+id/query_subject"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:ems="10"
                android:paddingLeft="8dp"
                android:hint="Enter subject"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangular_layout_shadow_effect_light">

            <EditText
                android:id="@+id/query_email"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Enter email"
                android:paddingLeft="8dp"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="1dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangular_layout_shadow_effect_light">


                <EditText
                    android:id="@+id/query_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@android:color/white"
                    android:singleLine="false"
                    android:lines="10"
                    android:inputType="textMultiLine"
                    android:hint="Enter your message"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Please, enter your subject, email and message. We will contact you through your email soon. "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp" />

        <Button
            android:id="@+id/query_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="SUBMIT"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_background"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/divider_medium" />

    </LinearLayout>


    </ScrollView>

</RelativeLayout>
